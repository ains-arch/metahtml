<script>
var $ = jQuery.noConflict();
$(document).ready(function(){
  $('.supportuspopupbanner').fadeIn([750], 'block'); // Fades in the CTA div after the page has loaded
  $(".close-supportpopupbanner, .supportpopupbannerbutton").click(function(){            
  $(this).parent().delay(2000).fadeOut(1000); 
  var date = new Date();
  var minutes = 60;
  date.setTime(date.getTime() + (minutes * 60 * 1000));
    $.cookie('cookie', 'cgaibanner', { expires: date, path: '/'}); 
  }); 
  if (typeof $.cookie('cookie') == 'undefined'){ 
    $('.supportuspopupbanner').removeClass('cookie'); 
  } else {
    $('.supportuspopupbanner').addClass('cookie') 
  }
  });
</script>  
