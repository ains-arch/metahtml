		const customerActivity = message.data.customerActivity;
		const customerActivityType = message.data.customerActivityType;
		const internalSFCampaign = message.data.internalSFCampaign;
		const formName = message.data.formName;

		if (channel === 'digioh-information') { // Parent Box
			const digiohCountry = message.data.country;
			const digiohBoxName = message.data.lightbox_name;

			dataDigiohEvent.digiohCountry = digiohCountry;
			dataDigiohSuccess.formName = digiohBoxName;
		}

		if (channel === 'digioh_lightbox_load') { // 3946
			console.log('Lightbox Load Message Received');
			var lightbox = document.getElementById('lightbox-iframe-' + id);

			// Assemble Tealium Data
			/* if (utm_campaign) {
				dataLoad.utm_campaign = utm_campaign;
			}
			if (utm_content) {
				dataLoad.utm_content = utm_content;
			}
			if (utm_medium) {
				dataLoad.utm_medium = utm_medium;
			}
			if (utm_source) {
				dataLoad.utm_source = utm_source;
			}
			if (utm_term) {
				dataLoad.utm_term = utm_term;
			} */
			if (customerActivity) {
				dataLoad.customerActivity = customerActivity;
				dataDigiohEvent.customerActivity = customerActivity;
			}
			if (customerActivityType) {
				dataLoad.customerActivityType = customerActivityType;
				dataDigiohEvent.customerActivityType = customerActivityType;
			}
			if (internalSFCampaign) {
				dataLoad.internalSFCampaign = internalSFCampaign;
				dataDigiohEvent.internalSFCampaign = internalSFCampaign;
			}
			if (formName) {
				dataLoad.formName = formName;
				dataDigiohEvent.formName = formName;
			}

			lightbox.contentWindow.postMessage(dataLoad, '*');
			console.log(dataLoad);

			// Send ID Values
			function sendID() {
				var lightbox = document.getElementById('lightbox-iframe-' + id);
				lightbox.contentWindow.postMessage(dataDigiohEvent, '*');
				console.log("dataDigiohEvent.visitorID = " + dataDigiohEvent.visitorID);
			}

			setTimeout(sendID, 2250);

			// Tealium
			utag.view(dataDigiohEvent);
		}

		if (channel === 'digioh-success') { /* 4229 */
			dataDigiohSuccess.customerEmail = message.data.customerEmail;
			utag.view(dataDigiohSuccess);
		}

	});

	// Categories
