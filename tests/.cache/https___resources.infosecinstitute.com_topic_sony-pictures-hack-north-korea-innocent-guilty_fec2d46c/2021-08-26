		let isiCertification = 'ethical-hacking-boot-camp';
		let resBootCampName = 'Ethical Hacking Dual Certification Boot Camp – CEH and PenTest+';
		primaryProcessor(resBootCampName, isiCertification);
		setTimeout(adContents, 2000);
	} else if (resCertification === 'CGEIT') {
		let isiCertification = 'cgeit-boot-camp';
		let resBootCampName = 'CGEIT Training Boot Camp';
		primaryProcessor(resBootCampName, isiCertification);
		setTimeout(adContents, 2000);
	} else if (resCertification === 'CISA') {
		let isiCertification = 'cisa-boot-camp';
		let resBootCampName = 'CISA Training Boot Camp';
		primaryProcessor(resBootCampName, isiCertification);
		setTimeout(adContents, 2000);
	} else if (resCertification === 'CISM') {
		let isiCertification = 'cism-boot-camp';
		let resBootCampName = 'CISM Training Boot Camp';
		primaryProcessor(resBootCampName, isiCertification);
		setTimeout(adContents, 2000);
	} else if (resCertification === 'CISSP') {
