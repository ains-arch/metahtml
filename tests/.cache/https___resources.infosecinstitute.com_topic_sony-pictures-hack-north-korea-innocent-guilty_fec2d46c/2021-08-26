	// Parse URL
	function getParameterByName(name) {
		name = name.replace(/[\[]/, "\\[").replace(/[\]]/, "\\]");
		var regex = new RegExp("[\\?&]" + name + "=([^&#]*)"),
			results = regex.exec(location.search);
		return results === null ? "" : decodeURIComponent(results[1].replace(/\+/g, " "));
	}

	// Objects
	var dataLoad = ({
		page_type: 'Form',
		channel: 'wordpress',
		customerActivityDate: '2021-08-27',
	});

	var dataDigiohSuccess = ({ /* 4229 */
		page_type: 'Form',
		tealium_event: 'digioh_form_success',
	});

	/*  UTMs
	var utm_campaign = getParameterByName('utm_campaign');
	if (utm_campaign != '') {
		dataLoad.utm_campaign = utm_campaign;
	}

	var utm_content = getParameterByName('utm_content');
	if (utm_content != '') {
		dataLoad.utm_content = utm_content;
	}

	var utm_medium = getParameterByName('utm_medium');
	if (utm_medium != '') {
		dataLoad.utm_medium = utm_medium;
	}

	var utm_source = getParameterByName('utm_source');
	if (utm_source != '') {
		dataLoad.utm_source = utm_source;
	}

	var utm_term = getParameterByName('utm_term');
	if (utm_term != '') {
		dataLoad.utm_term = utm_term;
	} */

	// Assemble Tealium Data
	var dataDigiohEvent = ({
		tealium_event: 'digioh_form_load',
