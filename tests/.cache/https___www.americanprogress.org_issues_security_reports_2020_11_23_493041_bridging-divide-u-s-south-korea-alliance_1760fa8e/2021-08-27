            <script type='text/javascript'>
                function set_CAPREF_Cookie(name,value,days) {
                    var expires = "";
                    if (!value) {
                        value = "DIRECT";
                    }
                    if (days) {
                        var date = new Date();
                        date.setTime(date.getTime() + (days*24*60*60*1000));
                        expires = "; expires=" + date.toUTCString();
                    }
                    document.cookie = name + "=" + (value || "")  + expires + "; path=/";
                }
                set_CAPREF_Cookie("capref", document.referrer);
            </script>
