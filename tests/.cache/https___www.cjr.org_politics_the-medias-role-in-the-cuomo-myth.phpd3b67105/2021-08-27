            <section class="row article-big-img-headline">
				<div class="col-sm-2 category center-block text-center hidden-print">
					                	
                                  
              			<a href="https://www.cjr.org/./politics">                    
              		                    
                    
                                        	<img class="category-circle-img" src="/wp-content/themes/cjr2017/_resources2015/img/category_circles/circle_politics.png" /> 
                                        	       
                    <small id="small-category">
					    
                        Politics                        
                    </small></a>
                    
