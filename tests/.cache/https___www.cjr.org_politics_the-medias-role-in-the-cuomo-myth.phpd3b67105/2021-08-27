        <div class="module-row hidden-print">
			<div class="module" id="breaking">
				
			</div>
		</div>
        
    </div>
    
    <div id="print-header">
        <img class="print-header-logo" src="/wp-content/themes/cjr2017/_resources2017/images/cjr-logo-2x-b.png" />
    </div>

