<script>
(function($, Drupal) {

// for some reason this gets attached twice. for now,
// creating a barrier to force a single load until the larger
// issue can be investigated.
var attaches = 0;
var submitted = false;

function attach(context, settings) {
  if (attaches > 0) {
    return;
  }
  attaches++;

  var frame = $('<iframe id="join-us-frame" name="join-us-frame" style="display: none;"></iframe>');
  $('body').append(frame);
  $('#actionkit_signup_form').attr('target', 'join-us-frame');

  $('#actionkit_signup_form').submit(function() {
    submitted = true;
    if (recordSignUp) {
      recordSignUp('Page Footer');
    }
  });

  var div = $('#signup-form');
  $('#join-us-frame').on('load', function() {
    if (submitted) {
      div.find('.step-1').fadeOut('fast', function() {
        div.find('.step-2').fadeIn('fast');
      });
    }
  });
}

Drupal.behaviors.nrdcBlockJoinUs = {
  attach: attach
};

})(jQuery, Drupal);
</script>



