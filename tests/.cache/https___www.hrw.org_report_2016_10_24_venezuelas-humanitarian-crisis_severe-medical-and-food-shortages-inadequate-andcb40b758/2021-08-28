  <svg viewBox="0 0 20 20" fill="currentColor"  role="img"  focusable="false"  aria-hidden="true"  >
        <use xlink:href="/themes/custom/hrw_design/dist/app-drupal/assets/spritemap.svg?cacheBuster=#sprite-camera"></use>
