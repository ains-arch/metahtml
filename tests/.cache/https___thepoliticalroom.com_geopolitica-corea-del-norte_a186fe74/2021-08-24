    function initModal() {
        setTimeout(() => {
            const key = 'modal-expires';
            const itemStr = localStorage.getItem(key);
            if (!itemStr) {
                MicroModal.show('modal-1');
                setWithExpiry(key, 604800);
            } else {
                const item = JSON.parse(itemStr);
                const now = new Date();
                if (now.getTime() > item.expiry) {
                    MicroModal.show('modal-1');
                    setWithExpiry(key, 604800);
                }
                return null;
            }
        },500);
    }
   
