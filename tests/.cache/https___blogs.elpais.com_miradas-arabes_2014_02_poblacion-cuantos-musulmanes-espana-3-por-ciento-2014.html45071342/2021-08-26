<script type="text/javascript">
if(document.addEventListener){
	window.addEventListener("load", transparente, false);
}
else{
	window.attachEvent('onload', transparente); //IE
	
}

/* Youtube WMode*/
function transparente(){
	var nodos = document.getElementsByTagName('IFRAME');
	var i;
	for (i=0; i<nodos.length; i++)
	{
		if (nodos[i].src.indexOf('youtube') > -1)
		{
		   if(nodos[i].src.indexOf('?') > -1) 
	{nodos[i].src += "&wmode=transparent";}
	else{nodos[i].src += "?wmode=transparent";}
		}
	} 
}

	var url_cache = "http://ep00.epimg.net";
	var url_reproductor_epet = "http://ep00.epimg.net/reproductores/playerPEP.swf";
	var reproductorVideoGlobal = '2';	

	var publicidad_HTML5 = true;
	var postroll_HTML5 = true;

	var videosBlogs = new Array;

	function VideoPlayerBC_BLOGS(datosVideo)
    {
        //Redefinimos las dimensiones para ajustarnos al ancho de la  columna
        if (document.getElementById('beta'))
        {
            var anchoColumna_width = 
			parseInt(document.getElementById('beta').offsetWidth);
            datosVideo.altoPlayer = Math.round(anchoColumna_width * 
			datosVideo.altoPlayer / datosVideo.anchoPlayer);
            datosVideo.anchoPlayer = anchoColumna_width;
        }

		var idVideo = "VideoPlayer_" + String(Math.random()).substr(2,9);
		document.write('<div id="' + idVideo + '" ></div>');
		
        //Comprobamos si tenemos comun.js
        if (videosBlogs.length == 0 )
        {
			videosBlogs.push({"datos":datosVideo,"divid":idVideo}); //Este sobra pero se a�ade para que no vuelva por aqui
            var ss = document.createElement('script');
            ss.type= 'text/javascript';
            ss.src = 'http://ep00.epimg.net/js/comun/comun.js';
            if (document.all)
                ss.onreadystatechange = function(){ if (ss.readyState == 'complete' || ss.readyState == 'loaded')
                EPET_VideoPlayer(datosVideo, idVideo);
                cargaRestoVideos();
                }
            else
                ss.onload = function() {
                    EPET_VideoPlayer(datosVideo, idVideo);
                    cargaRestoVideos()
                    };
            var hh = document.getElementsByTagName('head')[0];

            hh.appendChild(ss);
        }
        else
        {
			//Si ya tengo funcion los inserto, si no lo aniado al array
			if (typeof(EPET_VideoPlayer) != "function")
				videosBlogs.push({"datos":datosVideo,"divid":idVideo});
			else
				var video = new EPET_Video(datosVideo, idVideo);
        }
    }

	function cargaRestoVideos()
	{
		var i;
		//El primero ya se dibujo
		for (i=1; i<videosBlogs.length; i++)
		{
			var video = new EPET_Video(videosBlogs[i].datos, videosBlogs[i].divid);
		}
	}


	// Versi�n antigua 
	function VideoPlayerBC_TYP(id,ancho,alto,fotograma,pub,keyw,url)
	{
		datosVideo = {};
		//Por compatibilidad
		datosVideo.playerEPETParams = {"mediaWidth":ancho, "mediaHeight":alto, "URLMediaFile":"", "URLMediaStill":fotograma, "URLFirstFrame":fotograma, "compactMode": 'false'};
		datosVideo.anchoPlayer = ancho;
		datosVideo.altoPlayer = alto;
		datosVideo.idRefBrightcove = id.replace(/_0$/,"");  //Sin el _0 si lo llevara

		datosVideo.publiActiva = pub;
		datosVideo.keywordsVideo = keyw;
		datosVideo.urlNoticia = url;

		VideoPlayerBC_BLOGS(datosVideo);
	}

</script>
