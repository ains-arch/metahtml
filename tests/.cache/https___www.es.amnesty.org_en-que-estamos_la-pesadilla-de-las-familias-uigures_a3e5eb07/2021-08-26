            };
            var d=document, g=d.createElement("script"), s=d.getElementsByTagName("script")[0];
            g.type="text/javascript"; g.async=true; g.defer=true; g.src=u+"piwik.js"; s.parentNode.insertBefore(g,s);
          }
        });
        </script>
        <!-- End Piwik Tag --><script>
    if (document.querySelector('.tweet__cta') !== null) {

            $('.tweet__cta').each( function() {
                var oldHtml = '',
                    element = $(this);
                if (element.find('a.tweet__link').length === 0) {
                    oldHtml = element.html();
                    element.html('<a class="tweet__link" href="javascript:">' + oldHtml + '</a>');
                }
            });

    }
</script>

