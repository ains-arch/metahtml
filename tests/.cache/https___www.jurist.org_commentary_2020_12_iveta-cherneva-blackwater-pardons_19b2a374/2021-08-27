            "publisher": {
                "@type": "Organization",
                "name": " - JURIST - Commentary - Legal News &amp; Commentary",
                "logo": {
                    "@type": "ImageObject",
                    "url": "https://justatic.com/v/20200911/external/jurist/images/jurist/logos/jurist-header.svg",
                    "height": "60",
                    "width": "200"
