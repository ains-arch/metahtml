    <script>
        function createCookie(cookieName, cookieValue, exdays) {
            var d = new Date();
            d.setTime(d.getTime() + (exdays*24*60*60*1000));
            var expires = "expires="+d.toUTCString();
            document.cookie = cookieName + "=" + cookieValue + "; " + expires+"; path=/";
        }
        function show_welcome_ad_desktop(){
            document.body.style.overflow = 'hidden';
            document.getElementById('interstitial').style.display = 'grid'
            var welcome_ad_slot = googletag.cmd.push(function() {
                googletag.defineSlot('/18430785/cswelcome', [640, 480], 'div-gpt-ad-1589203673317-0')
                .addService(googletag.pubads());
                googletag.enableServices();
                googletag.display('div-gpt-ad-1589203673317-0');
            });
        }
        function show_welcome_ad_mobile(){
            document.body.style.overflow = 'hidden';
            document.getElementById('interstitial').style.display = 'grid'
            var welcome_ad_mobile_slot = googletag.cmd.push(function() {
                googletag.defineSlot('/18430785/cswelcomemobile', [300, 250], 'div-gpt-ad-1589203673317-mobile')
                .addService(googletag.pubads());
                googletag.pubads().enableSingleRequest();
                googletag.enableServices();
                googletag.display('div-gpt-ad-1589203673317-mobile');
            });
        }
        function remove_welcome_ad(){
            document.body.style.overflow = '';
            document.getElementById('interstitial').style.display = 'none';
        }
        function onInterstitialClose(event){
            event.preventDefault();
            remove_welcome_ad();
            // googletag.destroy([welcome_ad_slot, welcome_ad_mobile_slot])
        }
    </script>
