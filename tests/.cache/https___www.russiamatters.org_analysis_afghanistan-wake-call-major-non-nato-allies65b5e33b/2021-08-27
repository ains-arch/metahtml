<article role="article" class="node node--type-analysis node--display-mode-full">
  <div class="layout-constrain">
    <div class="node-detail">
      <div class="node-detail__main">
                <div class="node__photo">
          <figure>
              <img src="/sites/default/files/styles/slider/public/media/full/27029507408_95bfbf9a6a_c.jpg?h=c9f93661&amp;itok=CI3IX3xp" width="1300" height="600" alt="NATO hq" />



