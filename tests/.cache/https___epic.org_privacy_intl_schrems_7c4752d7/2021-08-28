<script type="text/javascript">
$(document).ready(function(){
	$('#menu').slicknav();
});
</script><script type="text/javascript">
$(document).ready(function () {
    $('.text-toggle').on('click', function(event){
    	event.preventDefault();
    	// create toggle variables
    	var toggle = $(this);
    	var toggleContent = toggle.next('.toggle-content');
    	var toggleToggleIcon = $(this).children('.toggle-icon');
    	
    	// toggle toggle link open class
    	toggle.toggleClass("open");
    	// toggle toggle content
    	toggleContent.slideToggle(250);
    	
    	// change plus/minus icon
    	if (toggle.hasClass("open")) {
    		toggleToggleIcon.html(" <span class='toggle-icon minus'></span> ");
    	} else {
    		toggleToggleIcon.html(" <span class='toggle-icon plus'></span> ");
    	}
    });
});
</script>
