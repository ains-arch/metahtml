<script type="text/javascript">
	function fnMainSearchKey() {
		if (event.keyCode === 13) {
			event.preventDefault();
			$("#btnTotalSearch").click();
			return false;
		};
    }

    function fnMainSearch() {
		if( $("#searchWord").val()=='') 
		{
				alert("검색어를 입력하세요");
			$("#searchWord").focus();
			return false;
			}
			var pattern_spc = /[~!@#$%^&*()_+|<>?:{}]/;
				if( (pattern_spc.test($("#searchWord").val())) ){
					alert("특수문자는 검색어로 사용하실 수 없습니다.");
    			return false
		}
		
		location.href="/Eng/Etc/SearchList.aspx?h=N&search_txt="+ $("#searchWord").val();
    }
</script>
